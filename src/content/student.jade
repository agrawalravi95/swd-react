---
title: Welcome, John Doe
---
div.main
  .container
    .section
      .row
        h4 Profile
      .row
        .col.s12.padded-container.white.z-depth-1.no-padding--mobile.centre-align
          .col.s12.l4.hide-on-med-and-down
            img.responsive-img(src='images/avatar-large.jpg', alt='President')
          .col.s12.l8.top-padding--mobile
            .row.leftpad
              .col.s10.m10.l11
                h5.profile-name#profile-name Name
              .col.s1.m1
                a.waves-effect.waves-orange.btn-flat.modal-trigger.no-padding(href="#profile-update-modal")
                  i.mdi-editor-mode-edit.red-text
                #profile-update-modal.modal
                  .modal-content
                    .row.center-align
                      h5 Update Profile
                    form.col.s12
                      .row
                        .input-field.col.s12
                          input#profile-edit-dob.validate.datepicker(type='date')
                          label.active(htmlfor='profile-edit-dob') Date of Birth
                        .input-field.col.s12
                          input#profile-edit-address.validate(type='text')
                          label(htmlfor='profile-edit-address') Permanent Address
                        .input-field.col.s12
                          input#profile-edit-contact.validate(type='text')
                          label(htmlfor='profile-edit-contact') Contact Number
                        .input-field.col.s12
                          input#profile-edit-email.validate(type='email')
                          label(htmlfor='profile-edit-email') Email Address
                  .modal-footer
                    a.waves-effect.waves-orange.btn-flat.modal-action.modal-close(href='/student') Update
                    a.waves-effect.waves-red.btn-flat.modal-action.modal-close(href='/student') Cancel
              .row
                .col.s12.l6.valign-wrapper
                  .col.s1.valign
                    i.mdi-action-payment.grey-text.text-lighten-1.profile-content-icon
                  .col.s11.valign
                    .profile-content#profile-id ID
                .row.hide-on-large-only
                .col.s12.l6.valign-wrapper
                  .col.s1.valign
                    i.mdi-action-wallet-giftcard.grey-text.text-lighten-1.profile-content-icon
                  .col.s11.valign
                    .profile-content#profile-bday Birthday
              .row
                .col.s12.l6.valign-wrapper
                  .col.s1.valign
                    i.mdi-maps-my-location.grey-text.text-lighten-1.profile-content-icon
                  .col.s11.valign
                    .profile-content#profile-hostel Hostel
                .row.hide-on-large-only
                .col.s12.l6.valign-wrapper
                  .col.s1.valign
                    i.mdi-communication-location-on.grey-text.text-lighten-1.profile-content-icon
                  .col.s11.valign
                    .profile-content.profile-content--location#profile-addr Address
              .row
                .col.s12.l6.valign-wrapper
                  .col.s1.valign
                    i.mdi-communication-call.grey-text.text-lighten-1.profile-content-icon
                  .col.s11.valign
                    .profile-content#profile-phone Phone
                .row.hide-on-large-only
                .col.s12.l6.valign-wrapper
                  .col.s1.valign
                    i.mdi-communication-email.grey-text.text-lighten-1.profile-content-icon
                  .col.s11.valign
                    .profile-content#profile-email Email
